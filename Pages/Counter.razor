@page "/counter"

<h1>Counter</h1>

<p>Current count: @test.number</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>

@code {

    class couter
    {
        public int number = 0;
    }

    couter test = new couter();

    private void IncrementCount()
    {
        test.number++;
    }

}